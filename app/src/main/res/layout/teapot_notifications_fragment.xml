<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/notifications_fragment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/notificationSimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NotificationSimmer"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:padding="10dp"/>

        <CheckBox
            android:id="@+id/notificationModeChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NotificationModeChange"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:padding="10dp"/>

        <CheckBox
            android:id="@+id/Ñ‚otificationTemperatureChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NotificationTemperatureChange"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:padding="10dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NotificationRington"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:padding="10dp"/>

    </LinearLayout>
</FrameLayout>