<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LimitSettings"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackGround">

    <TextView
        android:id="@+id/min_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MinLimit"
        android:textColor="@color/list_divider"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:drawableRight="@drawable/left_arrow"
        style="?android:listSeparatorTextViewStyle"/>

    <TextView
        android:id="@+id/max_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MaxLimit"
        android:textColor="@color/list_divider"
        android:textSize="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/left_arrow"
        style="?android:listSeparatorTextViewStyle"/>

</LinearLayout>